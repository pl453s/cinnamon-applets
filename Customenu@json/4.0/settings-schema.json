{
    "layout":{
        "type":"layout",
        "pages":[
            "layout",
            "behaviour",
            "appearance"
        ],
        "layout":{
            "type":"page",
            "title":"Layout and Content",
            "sections":[
                "menu-layout",
                "menu-content"
            ]
        },
        "behaviour":{
            "type":"page",
            "title":"Behavior",
            "sections":[
                "panel-behave",
                "menu-behave"
            ]
        },
        "appearance":{
            "type":"page",
            "title":"Appearance",
            "sections":[
                "panel-appear",
                "menu-icons"
            ]
        },
        "menu-layout":{
            "type":"section",
            "title":"Layout",
            "keys":[
                "applications-view-mode",
                "powergroup-placement",
                "add-favorites",
                "description-placement",
                "enable-custom-menu-height",
                "custom-menu-height",
                "apps-grid-column-count"
            ]
        },
        "menu-content":{
            "type":"section",
            "title":"Content",
            "keys":[
                "show-places",
                "enable-bookmarks",
                "privacy-settings-button",
                "menu-editor-button",
                "resetCategoryOrder-button",
                "categories"
            ]
        },
        "panel-behave":{
            "type":"section",
            "title":"Panel",
            "keys":[
                "overlay-key",
                "activate-on-hover",
                "hover-delay",
                "enable-animation"
            ]
        },
        "menu-behave":{
            "type":"section",
            "title":"",
            "keys":[
                "category-click",
                "enable-autoscroll",
                "enable-search-providers",
                "get-providers"
            ]
        },
        "panel-appear":{
            "type":"section",
            "title":"Panel",
            "keys":[
                "menu-icon-custom",
                "menu-icon",
                "menu-label"
            ]
        },
        "menu-icons":{
            "type":"section",
            "title":"Menu",
            "keys":[
                "show-category-icons",
                "category-icon-size",
                "show-application-icons",
                "apps-list-icon-size",
                "apps-grid-icon-size"
            ]
        }
    },

    "categories":{
        "type":"generic",
        "default":[]
    },

    "applications-view-mode":{
        "type":"combobox",
        "default":1,
        "description":"Applications view mode",
        "options":{
            "List":0,
            "Grid":1
        },
        "tooltip":"View applications as list or grid"
    },
    "description-placement":{
        "type":"combobox",
        "default":1,
        "description":"Application description placement",
        "options":{
            "Tooltips":1,
            "Under titles":2,
            "None":3
        },
        "tooltip":"Choose where to show application descriptions"
    },
    "powergroup-placement":{
        "type":"combobox",
        "default":1,
        "description":"Session buttons location",
        "options":{
            "Top":0,
            "Bottom":1,
            "Left":2,
            "Right":3
        },
        "tooltip":"Choose where to show the session (quit, logout, etc.) buttons"
    },
    "add-favorites":{
        "type":"switch",
        "default":true,
        "description":"Add favorites to session buttons",
        "tooltip":"Show your favorite app icons next to the session buttons"
    },
    "enable-custom-menu-height":{
        "type":"switch",
        "default":false,
        "description":"Use a custom menu height",
        "tooltip":"Use a custom menu height"
    },
    "custom-menu-height":{
        "type":"spinbutton",
        "default":530,
        "min":360,
        "max":9999,
        "step":1,
        "units":"px",
        "description":"Custom menu height",
        "tooltip":"Custom menu height",
        "dependency":"enable-custom-menu-height"
    },
    "apps-grid-column-count":{
        "type":"spinbutton",
        "default":4,
        "min":3,
        "max":16,
        "step":1,
        "units":"columns",
        "description":"Number of columns in apps grid",
        "tooltip":"Number of columns in apps grid"
    },
    "show-places":{
        "type":"switch",
        "default":true,
        "description":"Show bookmarks and places",
        "tooltip":"Show bookmarks and places category in the menu"
    },
    "enable-bookmarks":{
        "type":"checkbox",
        "default":false,
        "description":"Show web bookmarks",
        "tooltip":"Show your browser's web bookmarks in the menu"
    },
    "privacy-settings-button":{
        "type":"button",
        "description":"Recent files settings",
        "callback":"launchPrivacySettings"
    },
    "menu-editor-button":{
        "type":"button",
        "description":"Open the menu editor",
        "callback":"launchEditor"
    },
    "resetCategoryOrder-button":{
        "type":"button",
        "description":"Reset category order",
        "callback":"resetCategoryOrder"
    },

    "overlay-key":{
        "type":"keybinding",
        "description":"Keyboard shortcut to open and close the menu",
        "default":"Super_L::Super_R"
    },
    "activate-on-hover":{
        "type":"checkbox",
        "default":false,
        "description":"Open menu on hover",
        "tooltip":"Open the menu when I move my mouse over the panel icon"
    },
    "hover-delay":{
        "indent":true,
        "dependency":"activate-on-hover",
        "type":"spinbutton",
        "default":50,
        "min":0,
        "max":1000,
        "step":50,
        "units":"milliseconds",
        "description":"Menu hover delay"
    },
    "enable-animation":{
        "type":"checkbox",
        "default":false,
        "description":"Use menu animations",
        "tooltip":"Animate the menu on open and close"
    },

    "category-click":{
        "type":"checkbox",
        "default":false,
        "description":"Activate categories on click",
        "tooltip":"Activate categories on click instead of on hover"
    },
    "enable-autoscroll":{
        "type":"checkbox",
        "default":true,
        "description":"Enable autoscrolling",
        "tooltip":"Enable autoscrolling in application list"
    },
    "enable-search-providers":{
        "type":"checkbox",
        "default":false,
        "description":"Enable search providers",
        "tooltip":"Include search provider results in searches"
    },
    "get-providers":{
        "type":"button",
        "description":"Example Search Providers",
        "callback":"getExampleSearchProviders"
    },

    "menu-icon-custom":{
        "type":"checkbox",
        "default":false,
        "description":"Use a custom icon",
        "tooltip":"Use a custom icon in the panel"
    },
    "menu-icon":{
        "type":"iconfilechooser",
        "default":"/usr/share/cinnamon/theme/menu-symbolic.svg",
        "description":"Panel icon",
        "dependency":"menu-icon-custom",
        "indent":"true",
        "tooltip":"Panel icon"
    },
    "menu-label":{
        "type":"entry",
        "default":"Menu",
        "description":"Panel text",
        "tooltip":"Text to show beside the panel icon"
    },

    "show-category-icons":{
        "type":"switch",
        "default":true,
        "description":"Show category icons",
        "tooltip":"Show category icons"
    },
    "category-icon-size":{
        "indent":true,
        "dependency":"show-category-icons",
        "type":"spinbutton",
        "default":24,
        "min":16,
        "max":256,
        "step":1,
        "units":"pixels",
        "description":"Category icon size",
        "tooltip":"Category icon size"
    },
    "show-application-icons":{
        "type":"switch",
        "default":true,
        "description":"Show application icons",
        "tooltip":"Show application icons"
    },
    "apps-list-icon-size":{
        "indent":true,
        "dependency":"show-application-icons",
        "type":"spinbutton",
        "default":24,
        "min":16,
        "max":256,
        "step":1,
        "units":"pixels",
        "description":"Applications list icon size",
        "tooltip":"Applications list icon size"
    },
    "apps-grid-icon-size":{
        "indent":true,
        "dependency":"show-application-icons",
        "type":"spinbutton",
        "default":64,
        "min":16,
        "max":256,
        "step":1,
        "units":"pixels",
        "description":"Applications grid icon size",
        "tooltip":"Applications grid icon size"
    }
}
